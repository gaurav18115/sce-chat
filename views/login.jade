extends layout

block content
    div.container.center
        form(name="login-form", method="post", action="/login")
            div.form-group.row
                span.label.col-sm-2 Username
                input.form-control.col-10(id="username", type="text", name="username")
            div.form-group.row
                span.label.col-sm-2 Password            
                input.form-control.col-10(id="password", type="password", name="password")
            div.form-group.row
                div.col.align-self.start
                div.col.align-self-center
                    input.btn.btn-primary(type="submit", value="Login")
    